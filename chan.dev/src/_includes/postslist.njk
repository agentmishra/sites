<ol
  reversed
  class="postlist"
  style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}"
>
  {% for post in postslist | reverse %} {#
  <li
    class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}"
  >
    #}
  </li>
  <li class="text-lg font-extrabold">
    <a
      href="{{ post.url | url }}"
      class="postlist-link m-0"
      style="font-family: 'Source Sans Pro', font"
      >{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{
        post.url
      }}</code
      >{% endif %}</a
    >
    {#
    <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{
      post.date | readableDate
    }}</time>
    #} {#
    <p>{{ post.templateContent | safe }}</p>
    #} {% for tag in post.data.tags %} {%- if collections.tagList.indexOf(tag)
    != -1 -%} {% set tagUrl %}/tags/{{ tag }}/{% endset %}
    <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
    {%- endif -%} {% endfor %}
  </li>
  {% endfor %}
</ol>
